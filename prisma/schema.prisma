generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  name           String?
  password       String
  profilePicture String?
  bio            String?
  followers      Int
  posts          Post[]
}

model Post {
  id       Int       @id @default(autoincrement())
  content  String?
  author   User      @relation(fields: [authorId], references: [id])
  authorId Int
  likes    Int
  comments Comment[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  post    Post   @relation(fields: [postId], references: [id])
  postId  Int
}
